<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="?android:attr/colorBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸŒŠ Kotlin Flow Demo"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="?attr/colorPrimary"
            android:paddingVertical="16dp" />

        <!-- StateFlow Counter Section -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardElevation="4dp"
            app:cardCornerRadius="8dp"
            app:cardBackgroundColor="?attr/colorPrimaryContainer">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="StateFlow Counter"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="?attr/colorOnPrimaryContainer" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hot flow that holds state and emits updates"
                    android:textSize="12sp"
                    android:alpha="0.7"
                    android:layout_marginTop="4dp"
                    android:textColor="?attr/colorOnPrimaryContainer" />

                <TextView
                    android:id="@+id/tvCounter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="48sp"
                    android:textStyle="bold"
                    android:textColor="?attr/colorPrimary"
                    android:layout_marginVertical="16dp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btnDecrement"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="-"
                        android:layout_marginEnd="8dp" />

                    <Button
                        android:id="@+id/btnReset"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Reset"
                        android:layout_marginEnd="8dp" />

                    <Button
                        android:id="@+id/btnIncrement"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="+" />
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Basic Flow Section -->
        <include layout="@layout/flow_demo_card"
            android:id="@+id/basicFlowCard" />

        <!-- Transform Operators Section -->
        <include layout="@layout/flow_demo_card"
            android:id="@+id/transformCard" />

        <!-- Filter Operators Section -->
        <include layout="@layout/flow_demo_card"
            android:id="@+id/filterCard" />

        <!-- SharedFlow Section -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardElevation="4dp"
            app:cardCornerRadius="8dp"
            app:cardBackgroundColor="?attr/colorSecondaryContainer">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SharedFlow"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="?attr/colorOnSecondaryContainer" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hot flow that broadcasts to multiple collectors"
                    android:textSize="12sp"
                    android:alpha="0.7"
                    android:layout_marginTop="4dp"
                    android:textColor="?attr/colorOnSecondaryContainer" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp">

                    <Button
                        android:id="@+id/btnEmitShared"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Emit Event"
                        android:layout_marginEnd="8dp" />

                    <Button
                        android:id="@+id/btnClearShared"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Clear"
                        android:backgroundTint="?attr/colorError" />
                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvSharedFlow"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:maxHeight="200dp"
                    android:visibility="gone" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Combine Operator Section -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardElevation="4dp"
            app:cardCornerRadius="8dp"
            app:cardBackgroundColor="?attr/colorTertiaryContainer">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Combine Operator"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="?attr/colorOnTertiaryContainer" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Combines latest values from multiple flows"
                    android:textSize="12sp"
                    android:alpha="0.7"
                    android:layout_marginTop="4dp"
                    android:textColor="?attr/colorOnTertiaryContainer" />

                <Button
                    android:id="@+id/btnCombine"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Start Combine Demo"
                    android:layout_marginTop="8dp" />

                <TextView
                    android:id="@+id/tvCombineResult"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="?attr/colorPrimary"
                    android:background="@android:color/white"
                    android:padding="12dp"
                    android:layout_marginTop="8dp"
                    android:visibility="gone" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Zip Operator Section -->
        <include layout="@layout/flow_demo_card"
            android:id="@+id/zipCard" />

        <!-- FlatMap Operator Section -->
        <include layout="@layout/flow_demo_card"
            android:id="@+id/flatMapCard" />

        <!-- Distinct Operator Section -->
        <include layout="@layout/flow_demo_card"
            android:id="@+id/distinctCard" />

        <!-- Advanced Operators Section -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardElevation="4dp"
            app:cardCornerRadius="8dp"
            app:cardBackgroundColor="?attr/colorErrorContainer">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Advanced Operators"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="?attr/colorOnErrorContainer" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Take, Retry, Catch, Buffer operators"
                    android:textSize="12sp"
                    android:alpha="0.7"
                    android:layout_marginTop="4dp"
                    android:textColor="?attr/colorOnErrorContainer" />

                <Button
                    android:id="@+id/btnTake"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Demo: Take Operator"
                    android:layout_marginTop="8dp" />

                <Button
                    android:id="@+id/btnErrorHandling"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Demo: Error Handling (Retry/Catch)"
                    android:layout_marginTop="8dp" />

                <Button
                    android:id="@+id/btnBuffer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Demo: Buffer Operator"
                    android:layout_marginTop="8dp" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Clear All Button -->
        <Button
            android:id="@+id/btnClearAll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Clear All Data"
            android:backgroundTint="?attr/colorError"
            android:layout_marginBottom="16dp" />

    </LinearLayout>
</ScrollView>


