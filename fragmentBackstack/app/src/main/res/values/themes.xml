<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.FragmentBackstack" parent="Theme.Material3.Dark.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/accent_primary</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        
        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/accent_secondary</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        
        <!-- Background -->
        <item name="android:colorBackground">@color/background_primary</item>
        <item name="colorSurface">@color/card_surface</item>
        <item name="colorOnSurface">@color/text_primary</item>
        
        <!-- Status bar -->
        <item name="android:statusBarColor">@color/background_primary</item>
        <item name="android:navigationBarColor">@color/background_primary</item>
        
        <!-- Error color -->
        <item name="colorError">@color/error</item>
    </style>

    <!-- Full-screen dialog theme -->
    <style name="Theme.FragmentBackstack.FullScreenDialog" parent="Theme.Material3.Dark.NoActionBar">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@color/background_primary</item>
        <item name="android:windowNoTitle">true</item>
    </style>

</resources>
