<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_primary"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ’¬ DialogFragments"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Various types of dialog fragments"
            android:textSize="14sp"
            android:textColor="@color/text_secondary"
            android:layout_marginTop="4dp" />

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardBackgroundColor="@color/card_surface"
            app:cardCornerRadius="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dialog Result:"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary" />

                <TextView
                    android:id="@+id/txtDialogResult"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="(no result yet)"
                    android:textSize="16sp"
                    android:textColor="@color/accent_primary"
                    android:layout_marginTop="4dp" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardBackgroundColor="@color/card_dialog"
            app:cardCornerRadius="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Standard DialogFragment"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/white" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Uses onCreateDialog() with AlertDialog.Builder. Returns result via FragmentResult API."
                    android:textSize="13sp"
                    android:textColor="@color/white"
                    android:alpha="0.8"
                    android:layout_marginTop="4dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnShowStandardDialog"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Show Standard Dialog"
                    android:layout_marginTop="12dp"
                    style="@style/Widget.Material3.Button.TonalButton" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            app:cardBackgroundColor="@color/card_viewmodel"
            app:cardCornerRadius="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Custom Layout Dialog"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/white" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Uses onCreateView() with custom XML layout. Full control over appearance."
                    android:textSize="13sp"
                    android:textColor="@color/white"
                    android:alpha="0.8"
                    android:layout_marginTop="4dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnShowCustomDialog"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Show Custom Dialog"
                    android:layout_marginTop="12dp"
                    style="@style/Widget.Material3.Button.TonalButton" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            app:cardBackgroundColor="@color/card_viewpager"
            app:cardCornerRadius="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="BottomSheet DialogFragment"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/white" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Extends BottomSheetDialogFragment. Slides up from bottom with drag-to-dismiss."
                    android:textSize="13sp"
                    android:textColor="@color/white"
                    android:alpha="0.8"
                    android:layout_marginTop="4dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnShowBottomSheet"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Show Bottom Sheet"
                    android:layout_marginTop="12dp"
                    style="@style/Widget.Material3.Button.TonalButton" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            app:cardBackgroundColor="@color/card_architecture"
            app:cardCornerRadius="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Full-Screen DialogFragment"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/white" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Dialog styled to fill entire screen. Good for complex forms or detail views."
                    android:textSize="13sp"
                    android:textColor="@color/white"
                    android:alpha="0.8"
                    android:layout_marginTop="4dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnShowFullScreenDialog"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Show Full-Screen Dialog"
                    android:layout_marginTop="12dp"
                    style="@style/Widget.Material3.Button.TonalButton" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/code_background"
            android:padding="12dp"
            android:text="class MyDialogFragment : DialogFragment() {\n    override fun onCreateDialog(savedState: Bundle?) =\n        AlertDialog.Builder(requireContext())\n            .setTitle(\&quot;Title\&quot;)\n            .setMessage(\&quot;Message\&quot;)\n            .setPositiveButton(\&quot;OK\&quot;) { _, _ ->\n                setFragmentResult(\&quot;dialog\&quot;, bundleOf(\n                    \&quot;result\&quot; to \&quot;confirmed\&quot;\n                ))\n            }\n            .create()\n}\n\n// Show it:\nMyDialogFragment().show(childFragmentManager, \&quot;tag\&quot;)"
            android:textSize="10sp"
            android:textColor="@color/code_text"
            android:fontFamily="monospace"
            android:layout_marginTop="16dp" />

    </LinearLayout>
</ScrollView>
