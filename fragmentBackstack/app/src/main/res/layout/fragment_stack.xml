<?xml version="1.0" encoding="utf-8"?>
<!-- Used for Stack A, B, C fragments in backstack demo -->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/background_primary">

    <TextView
        android:id="@+id/txtStackName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stack Fragment"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="@color/text_primary" />

    <TextView
        android:id="@+id/txtBackstackInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Backstack: 0"
        android:textSize="16sp"
        android:textColor="@color/text_secondary"
        android:layout_marginTop="8dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnNext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Go to Next"
        android:layout_marginTop="24dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnNextWithPop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Go to Next (with popUpTo)"
        android:layout_marginTop="8dp"
        style="@style/Widget.Material3.Button.TonalButton" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnPopToHome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pop to Home (Clear Stack)"
        android:layout_marginTop="8dp"
        style="@style/Widget.Material3.Button.OutlinedButton" />

    <TextView
        android:id="@+id/txtExplanation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="13sp"
        android:textColor="@color/text_tertiary"
        android:lineSpacingExtra="4dp"
        android:layout_marginTop="24dp" />

    <TextView
        android:id="@+id/txtBackstackVisualization"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/code_background"
        android:padding="12dp"
        android:text=""
        android:textSize="12sp"
        android:textColor="@color/code_text"
        android:fontFamily="monospace"
        android:layout_marginTop="16dp" />

</LinearLayout>

