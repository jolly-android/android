<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_primary">

    <TextView
        android:id="@+id/txtTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ðŸ”„ Fragment Transactions"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="@color/text_primary"
        android:layout_margin="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/txtCurrentState"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Current: No fragments"
        android:textSize="14sp"
        android:textColor="@color/text_secondary"
        android:layout_marginHorizontal="16dp"
        app:layout_constraintTop_toBottomOf="@id/txtTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <LinearLayout
        android:id="@+id/buttonGrid"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/txtCurrentState"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnAddRed"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="ADD Red"
                android:textSize="11sp"
                app:backgroundTint="@color/fragment_red" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnAddBlue"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="ADD Blue"
                android:textSize="11sp"
                android:layout_marginStart="4dp"
                app:backgroundTint="@color/fragment_blue" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnAddGreen"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="ADD Green"
                android:textSize="11sp"
                android:layout_marginStart="4dp"
                app:backgroundTint="@color/fragment_green" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="4dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnReplaceRed"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="REPLACE Red"
                android:textSize="10sp"
                style="@style/Widget.Material3.Button.TonalButton"
                app:backgroundTint="@color/fragment_red_light" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnReplaceBlue"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="REPLACE Blue"
                android:textSize="10sp"
                android:layout_marginStart="4dp"
                style="@style/Widget.Material3.Button.TonalButton"
                app:backgroundTint="@color/fragment_blue_light" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnReplaceGreen"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="REPLACE Green"
                android:textSize="10sp"
                android:layout_marginStart="4dp"
                style="@style/Widget.Material3.Button.TonalButton"
                app:backgroundTint="@color/fragment_green_light" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnHide"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="HIDE Top"
                android:textSize="11sp"
                style="@style/Widget.Material3.Button.OutlinedButton" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnShow"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="SHOW All"
                android:textSize="11sp"
                android:layout_marginStart="4dp"
                style="@style/Widget.Material3.Button.OutlinedButton" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnRemove"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="REMOVE Top"
                android:textSize="11sp"
                android:layout_marginStart="4dp"
                style="@style/Widget.Material3.Button.OutlinedButton" />
        </LinearLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnClearAll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Clear All Fragments"
            android:layout_marginTop="8dp"
            style="@style/Widget.Material3.Button.TextButton" />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/fragmentContainer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/container_background"
        android:layout_margin="16dp"
        app:layout_constraintTop_toBottomOf="@id/buttonGrid"
        app:layout_constraintBottom_toTopOf="@id/txtLog"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/txtLog"
        android:layout_width="0dp"
        android:layout_height="120dp"
        android:background="@color/code_background"
        android:padding="8dp"
        android:text="Transaction log:\n"
        android:textSize="11sp"
        android:textColor="@color/code_text"
        android:fontFamily="monospace"
        android:scrollbars="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
